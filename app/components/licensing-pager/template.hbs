<nav>
  <ul class="pager">
    {{#unless changeStep.isFirst}}
      <li class="previous"><a role="button" onclick={{action changeStep -1}}><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Back</a></li>
    {{/unless}}
    {{#unless changeStep.isLast}}
      <li class="next"><a role="button" onclick={{action changeStep 1}}>Continue <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span></a></li>
    {{/unless}}
  </ul>
</nav>

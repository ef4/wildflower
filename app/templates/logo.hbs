<section class="l-sidebar l-sidebar--highlight">
    <article class="widget">
        <label class="widget-label" for="">Enter your school name:</label>
        {{input class='widget-label' type='text' value=name}}
    </article>
    <article class="widget">
        <label class="widget-label" for="">Choose a font:</label>
        {{view 'select' content=inventory.fonts
                        value=font
                        optionLabelPath="content.name"
                        optionValuePath="content.id"}}
    </article>
    <article class="widget">
        <span class="widget-label" for="">Choose up to 3 flowers:</span>
        <div class="box box--scroll">
            <div class="grid grid--three grid--lines">
                {{#each flower in inventory.flowers}}                                     
                <div class="grid-item"><button class="btn btn--image btn--highlight" {{action 'toggleFlower' flower}} {{bind-attr class=flower.selected}}><img {{bind-attr src=flower.location}}></button></div>
                {{/each}}
                <div class="gap"></div>
            </div>
            <!-- .grid -->
        </div>
        <!-- .box -->
    </article>
    <!-- .widget -->
    <article class="widget">
        <span class="widget-label">Choose a color palette</span>
        <div class="box">
            <div class="grid grid--three">
                {{#each palette in inventory.palettes}}
                    {{palette-box palette=palette setPalette='setPalette'}}
                {{/each}}
                <div class="gap"></div>
            </div>
            <!-- .grid -->
        </div>
        <!-- .box -->
    </article>
    <!-- .widget -->
    <article class="widget">
        <span class="widget-label">Choose an arrangement</span>
        <div class="box">
            <div class="grid grid--two">
                {{#each a in inventory.arrangements}}
                <div class="grid-item"><button {{bind-attr class=":btn :btn--highlight a.selected"}} {{action 'setArrangement' a}}>{{a.className}}</button></div>
                {{/each}}
            </div>
            <!-- .grid -->
        </div>
        <!-- .box -->
    </article>
    <!-- .widget -->
</section>
<!-- .l-sidebar -->

<main class="l-content" id="content">        
    <div {{bind-attr class=":logo arrangement.className"}} id="logo">
        <div class="logo-images">
        {{#each flower in flowerObjects}}
            <img class="logo-image" {{bind-attr src=flower.location}} alt="" />
        {{/each}}
        </div>
        <div {{bind-attr class=":logo-textbox selectedFont.className"}}>
            {{letter-split text=name palette=palette class='logo-title'}}
            <div {{bind-attr class=":logo-hide name::hide"}}>
            {{letter-split text='Montessori School' palette=palette class='logo-subtitle'}}
            </div>
        </div>
    </div>
</main>
<!-- .l-content -->

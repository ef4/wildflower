
<div class="teacher-requirements licensing-step">

  <div class="teacher-requirements-header licensing-step-header">
    <h2>Step 1: Teacher Requirements</h2>
  </div>

  <div class="teacher-requirements-body licensing-step-body">

    <div class="licensing-step-input input-col">

      <div class="studentAgeDropdownContainer licensing-step-input-container">
        <label for="studentAgeDropdown">
          What age are your students?
        </label>
        <div class="box box--flush dropdown licensing-step-control">
          {{
            student-age-dropdown
            id = 'stuentAgeDropdown'
            selectedStudentAge=selectedStudentAge
            action = 'setStudentAge'
            studentAgeRanges = studentAgeRanges
          }}
        </div>
      </div>

      <div class="studentAgeDropdownContainer licensing-step-input-container">
        <label for="studentAgeDropdown">
          How many students do you have?
        </label>
        <div class="box box--flush dropdown licensing-step-control">
          {{
            student-count-dropdown
            id = 'stuentCountDropdown'
            selectedStudentAge=selectedStudentCount
            action = 'setStudentCount'
            studentCounts = studentCounts
          }}
        </div>
      </div>

    </div>

    <div class="licensing-step-output output-col">
      {{#if requiredTeachers }}
        <div class="teachers-required-output">
          <div class="inputs-display">
            <div class="student-count-display">
              {{ requiredTeachers.studentCount.value }} students
            </div>
            <div class="age-range-display">
              {{ requiredTeachers.ageRange.ageRange }}
            </div>
          </div>
          <div class="outputs-display">
            {{#if requiredTeachers.tooManyStudentsError }}
              <div class="tooManyStudentsError">
                Exceeds maximum group size of {{ requiredTeachers.ageRange.maxGroupSize }}
              </div>
            {{/if}}
            {{#unless requiredTeachers.tooManyStudentsError }}
              <div class="number-of-teachers-required">
                {{ requiredTeachers.numberOfTeachersRequired }} total teachers required
              </div>
              <div class="educator-qualifications">
                {{ requiredTeachers.ageRange.educatorQualifications }}
              </div>
              <div class="notes">
                {{ requiredTeachers.ageRange.notes }}
              </div>
            {{/unless}}
          </div>
        </div>
      {{/if}}
    </div>

  </div>

</div>
